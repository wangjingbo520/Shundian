<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.MyFragment">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x15">

                    <com.eims.myapp.common.view.CircleImageView
                        android:layout_width="@dimen/x150"
                        android:layout_height="@dimen/x150"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_weight="1"
                        android:text="张三"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIP"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥1000.00"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VIP"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VIP"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="余额"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="积分"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="优惠券"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llLookmore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="@drawable/common_click"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的订单"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/textSize_32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x20"
                        android:text="查看全部订单"
                        android:textColor="@color/textColor6"
                        android:textSize="@dimen/textSize_30" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_click"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/x24"
                        android:paddingBottom="@dimen/x32">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv0"
                                android:layout_width="@dimen/x40"
                                android:layout_height="@dimen/x36"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvRing0"
                                android:layout_width="@dimen/x35"
                                android:layout_height="@dimen/x35"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/x30"
                                android:layout_marginBottom="@dimen/x30"
                                android:background="@drawable/ring"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x25" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x10"
                            android:text="待付款"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/textSize_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_click"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/x24"
                        android:paddingBottom="@dimen/x32">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="@dimen/x40"
                                android:layout_height="@dimen/x36"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvRing1"
                                android:layout_width="@dimen/x35"
                                android:layout_height="@dimen/x35"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/x30"
                                android:layout_marginBottom="@dimen/x30"
                                android:background="@drawable/ring"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x25"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x10"
                            android:text="待发货"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/textSize_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_click"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/x24"
                        android:paddingBottom="@dimen/x32">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv2"
                                android:layout_width="@dimen/x40"
                                android:layout_height="@dimen/x36"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvRing2"
                                android:layout_width="@dimen/x35"
                                android:layout_height="@dimen/x35"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/x30"
                                android:layout_marginBottom="@dimen/x30"
                                android:background="@drawable/ring"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x25"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x10"
                            android:text="待收货"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/textSize_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_click"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/x24"
                        android:paddingBottom="@dimen/x32">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv3"
                                android:layout_width="@dimen/x40"
                                android:layout_height="@dimen/x36"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvRing3"
                                android:layout_width="@dimen/x35"
                                android:layout_height="@dimen/x35"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/x30"
                                android:layout_marginBottom="@dimen/x30"
                                android:background="@drawable/ring"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x25"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x10"
                            android:text="待评价"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/textSize_30" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_click"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/x24"
                        android:paddingBottom="@dimen/x32">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv4"
                                android:layout_width="@dimen/x40"
                                android:layout_height="@dimen/x36"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvRing4"
                                android:layout_width="@dimen/x35"
                                android:layout_height="@dimen/x35"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/x30"
                                android:layout_marginBottom="@dimen/x30"
                                android:background="@drawable/ring"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_30"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x10"
                            android:text="退款"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/x30" />

                    </LinearLayout>
                </LinearLayout>

                <com.eims.myapp.common.view.MyGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>